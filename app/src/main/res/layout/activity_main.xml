<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="mdcsapp.android.owliz.com.myapplication.UI.MainActivity">

<TextView
    android:id="@+id/tv_logo"
    android:layout_width="364dp"
    android:layout_height="52dp"
    android:gravity="center"
    android:text="@string/app_name"
    android:textColor="?attr/colorAccent"
    android:textStyle="bold"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textSize="35sp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="30dp"/>

<TextView
    android:id="@+id/tv_slogan"
    android:layout_width="280dp"
    android:textSize="19sp"
    android:layout_height="50dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="everyday discovering friends brand new"
    android:textColor="@color/colorPrimaryDark"
    android:gravity="center_horizontal"
    android:layout_marginTop="14dp"
    app:layout_constraintTop_toBottomOf="@+id/tv_logo"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    />

<EditText
    android:id="@+id/et_ID"
    android:layout_width="267dp"
    android:layout_height="42dp"
    android:ems="10"
    android:inputType="textEmailAddress"
    android:hint="Email"
    android:layout_marginTop="38dp"
    app:layout_constraintTop_toBottomOf="@+id/tv_slogan"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.504"
    />

<EditText
    android:id="@+id/et_pswd"
    android:layout_width="269dp"
    android:layout_height="41dp"
    android:ems="10"
    android:inputType="textPassword"
    android:hint="Password"
    android:layout_marginTop="23dp"
    app:layout_constraintTop_toBottomOf="@+id/et_ID"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.494"/>


<Button
    android:id="@+id/btn_login"
    style="@style/common_button_style"
    android:clickable="true"
    android:layout_margin="10dp"
    android:layout_width="263dp"
    android:layout_height="40dp"
    android:text="Log  In"
    android:textSize="25sp"
    android:layout_marginTop="0dp"
    app:layout_constraintTop_toBottomOf="@+id/et_pswd"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/tv_hint"
    app:layout_constraintVertical_bias="0.0"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.504"/>

<TextView
    android:id="@+id/tv_hint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Doesn't have an account?"
    android:padding="5dp"
    android:layout_marginBottom="-17dp"
    app:layout_constraintBottom_toTopOf="@+id/tv_sign_up"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    />
<TextView
    android:id="@+id/tv_sign_up"
    android:layout_width="100dp"
    android:layout_height="27dp"
    android:gravity="center"
    android:textColor="?attr/colorAccent"
    android:clickable="true"
    android:text="sign up"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="102dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    />

</android.support.constraint.ConstraintLayout>
